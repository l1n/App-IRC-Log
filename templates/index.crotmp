<html>
<head>
  <title>Index of the #<.name> IRC Channel</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
  <h1 align="center" style="font-weight: bolder">#<.name></h1>
  <h1 align="center" style="font-weight: lighter"><.first-human-date></a> - <.last-human-date></h1>
  </p>
  <p>
  <@years>
    <h2><.year></h2>
    <p>
    <@months>
      <span style="font-weight: bold"><.human-month>:</span>
      <@dates>
        <?.conversation><a href="<.date>.html"><.day></a></?>
        <!.conversation><.day></!>
      </@>
    </@>
    </p>
  </@>
  </p>
  <&links($_, .name)>
  <div id="footer">Powered by <a href="https://cro.services">Cro</a> and the <a href="https://raku.org">Raku Programming Language</a></div>
</body>
</html>

<:sub links($_, $channel)>
<p>
<table width="100%">
<tr>
  <td>
    Search <input></input>
  </td>
  <td align="right">
    <form>
      <label for="channel">Channel</label>
      <select name="channel" id="channel" onchange="if (this.value) window.location.href=this.value">>
      <@channels>
        <option value="/<$_>/index.html"<?{ $_ eq $channel }> selected</?>><$_></option>
      </@>
    </select>
    </form>
  </td>
  <td align="right">
    <a href="today">Today</a>
    <a href="random">I feel lucky</a>
    <a href="/home.html">Home</a>
  </td>
</tr>
</table>
</p>
</:>
